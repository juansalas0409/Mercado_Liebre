<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: `${product.name}`}) %>
<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->

	<!-- product detail -->
	<div>
		<div>
			<div>
				<h2>Detalle del producto: <%= product.name %></h2>
			</div>
		</div>
		<div>
			<div>
				<div>
					<img src="/images/products/<%= product.image %>" alt="product image">
					<p>
						<%= product.description %>
					</p>
				</div>
				<div>
					<article>
						<h2><%= product.name %></h2>
						<% if(product.discount > 0) { 
							let finalPrice = (product.price * ((100 - product.discount) / 100)).toFixed(0)
						%>
							<p>
								<span>$<%= toThousand(product.price) %></span>
								/
								<b><%= product.discount %>% OFF</b>
							</p>
							<p class="product-detail-price">
								$<%= toThousand(finalPrice) %>
							</p>
						<% } else { %>
							<p class="product-detail-price">
								$<%= toThousand(product.price) %>
							</p>
						<% } %>

						<ul>
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pag√° en 12 cuotas sin interes</p>
							</li>
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en locales del vendedor</p>
							</li>
						</ul>

						<a href="#" class="buy-now-button">COMPRAR AHORA</a>
						<hr>

						<a href="/products/edit/<%= product.id %>">EDITAR PRODUCTO</a>
						<form action="/products/delete/<%= product.id %>?_method=DELETE" method="POST" style="display: inline-flex">
							<button type="submit" class="action-button delete">ELIMINAR</button>
						</form>
					</article>
				</div>
			</div>
		</div>
	</div>

	<!-- footer -->
	<%- include('../partials/footer') %>


</body>	
</html>