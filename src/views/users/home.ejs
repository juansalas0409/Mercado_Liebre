<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Inicio' }) %>

	<body>
		<!-- Header -->
		<%- include('../partials/headerNavbar') %>

        <div>
            <div>
                <div>
                    <h2>Basado en tu Ãºltima visita</h2>
                </div>
                <!-- Visited products -->
                <% visited.forEach(function(product){ %>
                    <% let finalPrice=(product.price * ((100 - product.discount) / 100)).toFixed(0) %> 
                    <div>
                        <section>
                            <a href="/products/detail/<%= product.id %>">
                                <figure>
                                    <img src="/images/products/<%= product.image %>" alt="imagen de producto">
                                </figure>
                                <article>
                                    <h2>
                                        <%= toThousand(finalPrice) %> 
                                    </h2>
                                    <span>
                                        <%= product.discount %> %OFF
                                    </span>
                                    <p>
                                        <%= product.name %> 
                                    </p>
                                    <i class="fas fa-truck"></i>
                                </article>
                            </a>
                        </section>
                    </div>
                    <%}) %> 
            </div>
            <div>
                <!-- Ofertas -->
				<div>
					<div>
						<div>
							<h2>Ofertas</h2>
						</div>

						<!--"in-sale" products -->
						<% inSale.forEach(function(product){ %>
							<% let finalPrice=(product.price * ((100 - product.discount) / 100)).toFixed(0) %>
								<div>
									<section>
										<a href="/products/detail/<%= product.id %>">
											<figure>
												<img src="/images/products/<%= product.image %>"
													alt="imagen de producto">
											</figure>
											<article>
												<h2>
													<%= toThousand(finalPrice) %>
												</h2>
												<span>
													<%= product.price * (( 100 - product.discount ) / 100).toFixed(0)%>
														%OFF
												</span>
												<p>
													<%= product.name %>
												</p>
												<i class="fas fa-truck"></i>
											</article>
										</a>
									</section>
								</div>
						<% }) %>
					</div>
				</div>
        </div>

		<!-- footer -->
		<%- include('../partials/footer') %>

	</body>
</html>